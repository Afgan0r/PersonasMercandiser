<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="10dip"/>
            <stroke android:width="3dip" android:color="#9eb77f" />
            <gradient android:angle="180" android:startColor="#9eb77f" android:endColor="#9eb77f" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#9eb77f" />
            <gradient android:angle="180" android:startColor="#9eb77f" android:endColor="#9eb77f" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#bad695" />
            <gradient android:angle="180" android:startColor="#bad695" android:endColor="#bad695" />
        </shape>
    </item>
</selector>