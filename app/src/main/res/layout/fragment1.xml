<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen1">

    <ExpandableListView
        android:id="@+id/ProductListView"
        style="@android:style/Widget.DeviceDefault.ExpandableListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addNewProductFAB"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="386dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="75dp"
        app:layout_constraintBottom_toTopOf="@+id/EditProductsFAB"
        app:layout_constraintEnd_toEndOf="@+id/EditProductsFAB"
        app:layout_constraintStart_toStartOf="@+id/EditProductsFAB"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="60dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/EditProductsFAB"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="17dp"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="75dp"
        app:layout_constraintBottom_toTopOf="@+id/SaveJobFab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNewProductFAB"
        app:maxImageSize="50dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/SaveJobFab"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/EditProductsFAB"
        app:layout_constraintTop_toBottomOf="@+id/EditProductsFAB"
        app:maxImageSize="50dp"
        app:srcCompat="@android:drawable/ic_menu_save" />

</android.support.constraint.ConstraintLayout>